<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!--顶部导航栏-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/Issue_toolbar_id"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:titleTextAppearance="@style/toolbar_title_size"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:text="话题"
            android:textSize="20sp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
        <ScrollView
            android:id="@+id/scrool_linear_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--标题和内容布局-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/issue_background"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:layout_height="50dp">
                    <TextView
                        android:text="标题:"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_id"
                        android:layout_weight="3"
                        android:textAlignment="center"
                        android:entries="@array/spinner_array"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>

                </LinearLayout>
                <!--电话的布局,并且取消自动获得焦点-->
                <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_margin="5dp"
                    android:background="@drawable/issue_background"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:layout_height="50dp">
                    <!--电话-->
                    <TextView
                        android:text="电话:"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <!--电话输入框-->
                    <EditText
                        android:id="@+id/phone_id"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:hint="请输入您的电话(方便联系)"
                        android:entries="@array/spinner_array"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <!--QQ的布局-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/issue_background"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:layout_height="50dp">
                    <!--电话-->
                    <TextView
                        android:text="QQ:"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <!--电话输入框-->
                    <EditText
                        android:id="@+id/qq_id"
                        android:layout_weight="3"
                        android:maxLines="1"
                        android:hint="请输入您的QQ"
                        android:entries="@array/spinner_array"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <!--输入内容布局-->
                <!--电话的布局-->
                <LinearLayout

                    android:background="@drawable/issue_background"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_height="150dp">
                    <EditText
                        android:id="@+id/content_id"
                        android:hint="你想说的话..."
                        android:gravity="left"
                        android:padding="5dp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"/>
                    <TextView
                        android:gravity="right|bottom"
                        android:id="@+id/issue_tv_id"
                        android:text="当前还能输入150字"
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>
                <!--实现图片加载进来并且右上角带有删除标记-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/issue_background"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content">
                    <!--线性布局包裹-->
                        <ImageButton
                            android:id="@+id/image_button_addimage_id"
                            android:layout_margin="2dp"
                            android:src="@drawable/ic_photo_camera_black_70dp"
                            android:layout_width="96dp"
                            android:background="@drawable/photo_back"
                            android:layout_height="96dp" />

                    <!--横向滚动的RecyclerView-->
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/issue_recycler_id"
                        android:layout_height="96dp"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
 </LinearLayout>
