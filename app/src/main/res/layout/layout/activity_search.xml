<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/search_toolbar_id"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:titleTextAppearance="@style/toolbar_title_size"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:background="@drawable/search_toolbar_edit_back"
            android:layout_height="35dp">

        <EditText
            android:layout_gravity="center"
            android:hint="请输入关键字"
            android:gravity="left"
            android:id="@+id/search_edit_id"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_search_black_242dp"
            android:drawablePadding="2dp"
            android:textSize="15sp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="35dp" />
            <!--搜索按钮-->
            <TextView
                android:layout_width="wrap_content"
                android:text="搜索"
                android:id="@+id/search_tv_id"
                android:enabled="false"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:drawableStart="@drawable/ic_line_for_black_24dp"
                android:textColor="@android:color/darker_gray"
                android:background="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</android.support.constraint.ConstraintLayout>