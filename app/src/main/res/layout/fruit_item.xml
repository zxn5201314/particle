<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--容纳标题内容布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">
            <!--标题-->
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:id="@+id/fruit_name_id"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="19sp"
                android:layout_height="wrap_content" />
            <!--内容-->

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/fruit_contetn_id"
                android:ellipsize="end"
                android:padding="7dp"
                android:maxHeight="50dp"
                android:maxLines="2"
                android:textIsSelectable="true"
                android:textSize="17sp"
                android:autoLink="phone"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!--容纳图片的内容布局-->
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:background="@drawable/image_back"
            android:layout_height="wrap_content">
            <!--第一张图片-->
            <c27.com.particle.view.RoundImageView
                android:id="@+id/image_fruit_id"
                android:layout_width="90dp"
                android:layout_weight="1"
                android:background="@drawable/image_back"
                android:layout_marginLeft="5dp"
                android:scaleType="centerInside"
                android:layout_height="90dp" />
            <!--第二章图片-->
            <c27.com.particle.view.RoundImageView
                android:layout_weight="1"
                android:id="@+id/image_fruit_id1"
                android:layout_width="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/image_back"
                android:scaleType="centerInside"
                android:layout_height="90dp" />
            <!--第三章图片-->
            <c27.com.particle.view.RoundImageView
                android:layout_weight="1"
                android:id="@+id/image_fruit_id2"
                android:layout_width="90dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/image_back"
                android:scaleType="centerInside"
                android:layout_height="90dp" />
        </LinearLayout>
        <!--浏览布局-->

        <LinearLayout

            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"

            android:layout_height="wrap_content">
            <!--小红心-->
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|left"
                android:id="@+id/image_1"
                android:src="@drawable/ic_remove_red_eye_black_24dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <!--浏览次数-->
            <TextView
                android:id="@+id/visit_tv1"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--发布日期-->
            <TextView

                android:text="2018-10-12 11:06"
                android:drawablePadding="5dp"
                android:id="@+id/time_tv2"
                android:layout_toRightOf="@id/visit_tv1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>






    </LinearLayout>


</android.support.v7.widget.CardView>